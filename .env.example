# balldontlie.io API key (GOAT tier required for odds)
BALLDONTLIE_API_KEY=your_goat_tier_key

# EV threshold - minimum expected value after fees to alert (3% = 0.03)
EV_THRESHOLD=0.03

# Kalshi average trading fee percentage (1.2% = 0.012)
KALSHI_FEE_PCT=0.012

# Kelly criterion fraction (0.25 = quarter Kelly for conservative sizing)
KELLY_FRACTION=0.25

# Poll interval in milliseconds (100ms = 10 req/sec = 600 req/min)
POLL_INTERVAL_MS=100

# SQLite database path
DB_PATH=/data/positions.db

# Health check server port
PORT=8080
